<mapper namespace="com.yonseidairy.site.mapper.HomeMapper">

    <select id="selectAllRegions" resultType="RegionDao">
        SELECT
	      A.CUSTNO AS code,
	      A.CUSTNAME AS name,
	      A.POLYGON_COORDS,
	      B.ADDR AS addr,
	      B.ADDR_1 AS gubun,
	      B.PHONE_MOBILE1 AS tel
	    FROM
	      REGION_LOCATION A,
	      CD_CUSTOMER B
	    WHERE
	      B.OFFICE_ID = 'YSM'
	      AND A.CUSTNO = B.CUSTNO
	      <if test="type != null and type != ''">
	        AND A.GUBUN_TYPE = #{type}
	      </if>
    </select>

</mapper>