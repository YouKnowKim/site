<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Region List</title>
</head>
<body>
    <h1>Dealer Regions</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Address</th>
                <th>Type</th>
                <th>Tel</th>
                <th>Polygon Points</th>
                <th>polygon_coords</th>
            </tr>
        </thead>
        <tbody id="regionTableBody">
            <!-- JavaScript로 데이터 삽입 -->
        </tbody>
    </table>

    <script>
        fetch('/api/getAllRegions')
            .then(response => response.json())
            .then(data => {
                const tbody = document.getElementById('regionTableBody');
                data.forEach(region => {
                    const tr = document.createElement('tr');

                    tr.innerHTML = `
                        <td>${region.code}</td>
                        <td>${region.name}</td>
                        <td>${region.addr}</td>
                        <td>${region.gubun_type}</td>
                        <td>${region.tel}</td>
                        <td>${region.polygon ? JSON.stringify(region.polygon) : '-'}</td>
                        <td>${region.polygon_coords}</td>
                    `;

                    tbody.appendChild(tr);
                });
            })
            .catch(error => {
                console.error('Error fetching region data:', error);
            });
    </script>
</body>
</html>